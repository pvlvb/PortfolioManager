<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:background="@color/colorDivider"
    >

    <EditText
        android:id="@+id/enter_ticker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Ticker"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="4dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/enter_ticker"
        android:layout_marginTop="18dp"
        android:text="/USDT (only Binance trading pairs)"
        />
    <EditText
        android:id="@+id/enter_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/enter_ticker"
        android:hint="Amount"
        android:maxLength="10"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>
    <EditText
        android:id="@+id/enter_price_per_coin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/enter_amount"
        android:hint="Price (per coin)"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>




</RelativeLayout>